{
    "files.exclude": {
        "dist": false
    },
    "search.exclude": {
        "dist": true
    },
    "typescript.tsc.autoDetect": "on",
    "cSpell.ignoreWords": [
        "Memberwise",
        "copyfiles",
        "cstor",
        "dirents",
        "nint",
        "nocase",
        "nuint",
        "ulong",
        "ushort"
    ],
    "mocha.options": {
        "ui": "bdd",
        "timeout": 10000,
        "require": [
            "ts-node/register"
        ],
        "colors": true,
        "recursive": true,
        "exit": true
    },
    "mocha.runTestsOnSave": "true",
    "mocha.coverage": {
        "enable": false,
    },
    "mocha.files.ignore": "**/vscode/**",
    "mocha.files.glob": "dist/test/**/*.test.js",
}